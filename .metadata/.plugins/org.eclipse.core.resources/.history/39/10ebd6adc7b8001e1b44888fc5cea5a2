package ex03;

import java.util.Scanner;

public class 버스요금 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		/*
		 * 
		 * 
		 * 
		 * /*
		 */
		Scanner sc = new Scanner(System.in);
		
		final int CHARGE = 1500; 
		double fee = 0;
		
		System.out.println("나이 입력 >> ");
		int age = sc.nextInt();
		
		if(age >= 20) {
			fee = CHARGE * 1.0;
		}else if (age >= 14) {
			fee = CHARGE * 0.75;
		}else if(age >= 4) {
			fee = CHARGE * 0.5;
		}else {
			fee = CHARGE * 0;
		}
		
		System.out.println("당신 요금은 : " + fee + "원");
	}

}
